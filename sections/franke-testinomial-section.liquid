<div class="section-{{ section.id }}-padding testimonials-{{ section.id }} color-{{ section.settings.color_scheme }}">
  <h2>{{ section.settings.title }}<span> â™¥ </span></h2>

  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      <!-- Slide 1 -->
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="testimonial-card">
            <img class="headshot" src="{{ block.settings.image | img_url:'master' }}" alt="Person {{ forloop.index }}">
            <div class="user-details">
            <div class="text">
              <p>{{ block.settings.content }}</p>
              <!-- <a href="#">Read more</a> -->
            </div>
            <div class="profile">
              <div class="user-details">
                <img class="user-img" src="{{ block.settings.image2 | img_url:'master' }}" alt="profile{{ forloop.index }}">
                <strong>{{ block.settings.title }}</strong>
              </div>
              <img class="social-icon" src="{{ block.settings.image3 | img_url:'master' }}" alt="platform-image">
            </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Arrows -->
    <div class="swiper-button-prev custom-nav">prev</div>
    <div class="swiper-button-next custom-nav">next</div>
    <div class="swiper-pagination"></div>
  </div>
</div>

<script>
  var swiper = new Swiper(".mySwiper", {
    slidesPerView: 1,
    spaceBetween: 30,
    loop: false,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    breakpoints: {
      768: {
        slidesPerView: 2,
      },
      1024: {
        slidesPerView: 3,
      }
    }
  });
</script>
{% schema %}
  {
      "name": "Franke Testinomial",
      "settings": [
        {
          "type": "color_scheme",
          "id": "color_scheme",
          "label": "t:sections.all.colors.label",
          "default": "background-1"
        },
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
      ],
      "blocks": [
        {
          "name": "Block",
          "type": "Block",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Customer Image"
            },
            {
              "type": "text",
              "id":"content",
              "label":"Discription"
            },
            {
              "type": "image_picker",
              "id": "image2",
              "label": "Customer Profile Image"
            },
            {
              "type": "text",
              "id":"title",
              "label":"Customer Name"
            },
            {
              "type": "image_picker",
              "id": "image3",
              "label": "Platform Image"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Franke Testinomial"
        }
      ]
    }
  {% endschema %}
<style>
