<div class="testimonials-{{ section.id }}">
  <h2>{{ section.settings.title }}<span>â™¥</span></h2>

  <div class="swiper mySwiper">
    <div class="swiper-wrapper">
      <!-- Slide 1 -->
      {% for block in section.blocks %}
        <div class="swiper-slide">
          <div class="testimonial-card">
            <img class="headshot" src="{{ block.settings.image | img_url:'master' }}" alt="Person {{ forloop.index }}">
            <div class="text">
              <p>{{ block.settings.content }}</p>
              <!-- <a href="#">Read more</a> -->
            </div>
            <div class="profile">
              <img src="{{ block.settings.image2 | img_url:'master' }}" alt="profile{{ forloop.index }}">
              <div>
                <strong>{{ block.settings.title }}</strong>
              </div>
              <img class="social-icon" src="{{ block.settings.image3 | img_url:'master' }}" alt="platform-image">
            </div>
          </div>
        </div>
      {% endfor %}
    </div>

    <!-- Arrows -->
    <div class="swiper-button-prev custom-nav">Prev</div>
    <div class="swiper-button-next custom-nav">next</div>
    <div class="swiper-pagination"></div>
  </div>
</div>

<script>
  var swiper = new Swiper(".mySwiper", {
    slidesPerView: 1,
    spaceBetween: 30,
    loop: true,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    breakpoints: {
      768: {
        slidesPerView: 2,
      },
      1024: {
        slidesPerView: 3,
      }
    }
  });
</script>
{% schema %}
  {
      "name": "Franke Testinomial",
      "settings": [
        {
          "type": "color_scheme",
          "id": "color_scheme",
          "label": "t:sections.all.colors.label",
          "default": "background-1"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading"
        }
      ],
      "blocks": [
        {
          "name": "Block",
          "type": "Block",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Customer Image"
            },
            {
              "type": "text",
              "id":"content",
              "label":"Discription"
            },
            {
              "type": "image_picker",
              "id": "image2",
              "label": "Customer Profile Image"
            },
            {
              "type": "text",
              "id":"title",
              "label":"Customer Name"
            },
            {
              "type": "image_picker",
              "id": "image3",
              "label": "Platform Image"
