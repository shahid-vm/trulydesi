<section class="why-truly-desi-section page-width">
  <div class="section-header">
    <h2>{{ section.settings.title }}</h2>
    <p class="tagline">{{ section.settings.content }}</p>
  </div>

  <div class="truly-desi-content">
    <!-- Block 1 -->
    {% for block in section.blocks %}
      {% if block.settings.show_right_content == true %}
      <div class="truly-desi-block block-left">
        <div class="number">{{ forloop.index }}</div>
        <div class="text">
          <h4>{{ block.settings.title }}</h4>
          <p>
           {{ block.settings.coll-desc }}
          </p>
        </div>
        <img src="{{ block.settings.main-img | img_url:'master' }}" alt="Leaf Left" class="leaf-left" />
      </div>
      {% else %}
      <!-- Block 2 -->
      <div class="truly-desi-block block-right">
        <div class="number">{{ forloop.index }}</div>
        <div class="text">
          <h4>{{ block.settings.title }}</h4>
          <p>
           {{ block.settings.coll-desc }}
          </p>
        </div>
        <img src="{{ block.settings.main-img | img_url:'master' }}" alt="Leaf Right" class="leaf-right" />
      </div>
      {% endif %}
    {% endfor %}
  </div>
</section>
{% schema %}
    {
    "name": "Meet Our Cow",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "background-1"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "richtext",
        "id": "content",
        "label": "Description"
      }
    ],
    "blocks": [
      {
        "name": "Block",
        "type": "Block",
        "settings": [
          {
            "type": "checkbox",
            "id": "show_right_content",
            "default": false,
            "label": "Show Second Content",
            "info": "Show Second Content"
          },
          {
            "type": "image_picker",
            "id": "main-img",
            "label": "Main Image"
          },
          {
            "type": "text",
            "id": "main-title",
            "label": "Heading"
          },
          {
            "type": "richtext",
            "id": "coll-desc",
            "label": "Description"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Meet Our Cow"
      }
    ]
  }
{% endschema %}
<style>
  .why-truly-desi-section {
  background: #fff;
  padding: 4rem 2rem;
  position: relative;
}

.section-header {
  text-align: center;
  margin-bottom: 3rem;
}

.section-header h2 {
  font-size: 2rem;
  color: #1A1A1A;
  margin-bottom: 0.5rem;
}

.tagline {
  color: #D2855E;
  letter-spacing: 2px;
  font-weight: 500;
}

.truly-desi-content {
  display: flex;
  flex-direction: column;
  gap: 3rem;
}

.truly-desi-block {
  display: flex;
  align-items: flex-start;
  position: relative;
}

.block-left {
  flex-direction: row;
}

.block-right {
  flex-direction: row-reverse;
  text-align: right;
}

.number {
  font-size: 3rem;
  color: #B96F4A;
  font-weight: bold;
  min-width: 60px;
  margin-right: 1.5rem;
}

.block-right .number {
  margin-left: 1.5rem;
  margin-right: 0;
}

.text h4 {
  font-size: 1rem;
  font-weight: 700;
  margin-bottom: 0.5rem;
  line-height: 1.5;
}

.text p {
  font-size: 0.95rem;
  line-height: 1.6;
  color: #333;
  max-width: 600px;
}

.leaf-left, .leaf-right {
  position: absolute;
  width: 80px;
}

.leaf-left {
  left: -30px;
  bottom: -20px;
}

.leaf-right {
  right: -30px;
  top: -20px;
}

@media (max-width: 768px) {
  .truly-desi-block {
    flex-direction: column !important;
    text-align: left !important;
  }

  .block-right .number,
  .block-right .text {
    margin-left: 0;
    text-align: left;
  }

  .leaf-left,
  .leaf-right {
    position: static;
    margin-top: 1rem;
    width: 60px;
  }
}
</style>
