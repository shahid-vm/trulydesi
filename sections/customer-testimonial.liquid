    <style> 
     .{{ section.id }} {
            margin: 0;
            padding: 0;
            background-color: #d6f1ff;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .{{ section.id }} .testimonial-section {
            text-align: center;
            max-width: 900px;
            background: #d6f1ff;
            padding: 40px;
            border-radius: 10px;
            position: relative;
        }

        .{{ section.id }} .stars {
            color: #ffc107;
            font-size: 24px;
            margin-bottom: 15px;
        }

        .{{ section.id }} .testimonial-text {
            font-size: 18px;
            font-weight: 500;
            color: #394634;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .{{ section.id }} .testimonial-img {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            object-fit: cover;
            margin-bottom: 10px;
        }

        .{{ section.id }} .testimonial-name {
            font-size: 20px;
            font-weight: bold;
            color: #394634;
        }

        .{{ section.id }} .testimonial-role {
            font-size: 14px;
            color: #555;
        }

        .{{ section.id }} .navigation {
            display: flex;
            justify-content: space-between;
            position: absolute;
            top: 50%;
            width: 100%;
            transform: translateY(-50%);
        }

        .{{ section.id }} .nav-btn {
            background-color: white;
            border: none;
            width: 40px;
            height: 40px;
            border-radius: 50%;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }

        .{{ section.id }} .nav-btn:hover {
            background-color: #eee;
        }

        .{{ section.id }} .left {
            position: absolute;
            left: -20px;
        }

        .{{ section.id }} .right {
            position: absolute;
            right: -20px;
        }

        @media (max-width: 768px) {
            .{{ section.id }} .testimonial-section {
                padding: 20px;
            }

            .{{ section.id }} .testimonial-text {
                font-size: 16px;
            }

            .{{ section.id }} .nav-btn {
                width: 35px;
                height: 35px;
            }
        }
    </style>
      <div class="{{ section.id }} color-{{ section.settings.color_scheme }}">
         <div class="testimonial-section">
           {% for block in section.blocks %}
             {% if forloop.first %}
            <div class="stars">⭐⭐⭐⭐⭐</div>
            <p class="testimonial-text" id="testimonial-text">
                "{{ block.settings.content }}"
            </p>
            <img src="{{ block.settings.image | img_url:'master' }}" alt="customer-profile-image" class="testimonial-img" id="testimonial-img">
            <p class="testimonial-name" id="testimonial-name">{{ block.settings.title }}</p>
            <p class="testimonial-role" id="testimonial-role">{{ block.settings.sub-title }}</p>
    
            <div class="navigation">
                <button class="nav-btn left" onclick="prevTestimonial()">&#10094;</button>
                <button class="nav-btn right" onclick="nextTestimonial()">&#10095;</button>
            </div>
           {% endif %}
           {% endfor %}
        </div>
      </div>
      <script>
        const testimonials = [
          {% for block in section.blocks %}
            {
                text: "{{ block.settings.content }}",
                img: "{{ block.settings.image | img_url:'master' }}",
                name: "{{ block.settings.title }}",
                role: "{{ block.settings.sub-title }}"
            }
          {% endfor %}
        ];

        let currentIndex = 0;

        function updateTestimonial(index) {
            document.getElementById("testimonial-text").textContent = testimonials[index].text;
            document.getElementById("testimonial-img").src = testimonials[index].img;
            document.getElementById("testimonial-name").textContent = testimonials[index].name;
            document.getElementById("testimonial-role").textContent = testimonials[index].role;
        }

        function prevTestimonial() {
            currentIndex = (currentIndex === 0) ? testimonials.length - 1 : currentIndex - 1;
            updateTestimonial(currentIndex);
        }

        function nextTestimonial() {
            currentIndex = (currentIndex === testimonials.length - 1) ? 0 : currentIndex + 1;
            updateTestimonial(currentIndex);
        }
    </script>
  {% schema %}
  {
      "name": "Customer Testinomial",
      "settings": [
        {
          "type": "color_scheme",
          "id": "color_scheme",
          "label": "t:sections.all.colors.label",
          "default": "background-1"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading"
        }
      ],
      "blocks": [
        {
          "name": "Block",
          "type": "Block",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Customer Image"
            },
            {
              "type": "text",
              "id":"content",
              "label":"Discription"
            },
            {
              "type": "text",
              "id":"title",
              "label":"Customer Name"
            },
            {
              "type": "text",
              "id":"sub-title",
              "label":"Sub Title"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Customer Testinomial"
        }
      ]
    }
  {% endschema %}
