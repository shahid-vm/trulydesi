 <section class="areas-we-serve">
    <h2 class="section-title">{{ section.settings.title }}</h2>
    <div class="area-list">
      {% for block in section.blocks %}
        <a href="{{ block.settings.link }}" >{{ block.settings.heading }}</a>
      {% endfor %}
    </div>
  </section>
{% schema %}
  {
    "name": "location-areas",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "header",
        "content": "Section Padding",
      },
      {
        "type": "range",
        "id": "padding_top",
        "label": "Padding Top",
        "default": 40,
        "min": 0,
        "max": 100
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "label": "Padding Bottom",
        "default": 40,
        "min": 0,
        "max": 100
      }
    ],
    "blocks": [
      {
        "type": "icon_box",
        "name": "Link Box",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "url",
            "id": "link",
            "label": "Link"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Location Areas"
      }
    ]
  }
{% endschema %}
<style>
  .areas-we-serve {
        padding-top: {{ section.settings.padding_top }}px;
        padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    .areas-we-serve {
      text-align: center;
    }
    
    .section-title {
      font-size: 28px;
      font-weight: bold;
      color: #064f32;
      position: relative;
      text-align: center;
      width: 100%;
    }
  
    
    .area-list {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
      gap: 10px;
    }
    
    .area-list a {
      background-color: #0F481D;
      color: #fff;
      padding: 10px 16px;
      border-radius: 6px;
      font-size: 16px;
      white-space: nowrap;
      box-shadow: 1px 2px 4px rgba(0,0,0,0.1);
      transition: transform 0.2s ease;
      cursor: pointer;
    }
    
    .area-list a:hover {
      transform: scale(1.05);
      background-color: #679e24;
      
    }

</style>