{% schema %}
{
  "name": "Contact Form With Content",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "t:sections.contact-form.settings.title.default",
      "label": "t:sections.contact-form.settings.title.label"
    },
    {
      "type": "select",
      "id": "heading_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left",
      "label": "Heading Alignment"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
      "type": "checkbox",
      "id": "show_right_contact_form",
      "default": false,
      "label": "Show Second Contact Form",
      "info": "Show Second Contact Form"
    },
  ],
  "blocks": [
    {
      "type": "phone",
      "name": "Contact Number",
      "settings": [
        {
          "type": "text",
          "id": "contact_title",
          "label": "Contact Title",
          "default": "Toll Free Number"
        },
        {
          "type": "text",
          "id": "contact_no",
          "label": "Contact Number",
        }
      ]
    },
    {
      "type": "email",
      "name": "Email",
      "settings": [
        {
          "type": "text",
          "id": "email_title",
          "label": "Email Title",
          "default": "Email"
        },
        {
          "type": "text",
          "id": "email",
          "label": "Email"
        }
      ]
    },
    {
      "type": "address",
      "name": "Address",
      "settings": [
        {
          "type": "text",
          "id": "address_title",
          "label": "Address Title",
          "default": "Address Title"
        },
        {
          "type": "text",
          "id": "address",
          "label": "Address"
        }
      ]
    },
    {
      "type": "social",
      "name": "Social Link",
      "limit": 1,
      "settings": [
          {
            "type": "checkbox",
            "id": "show_social_icon",
            "default": false,
            "label": "Show Social Link",
            "info": "Show Social Link"
          }
      ]
    }
  ],
  "presets": [
    {
      "name": "Contact Form With Content"
    }
  ]
}
{% endschema %}
<style>
  .container-{{ section.id }}{
    display: flex;
    gap: 20px;
  }
  .container-{{ section.id }} #ContactForm,.container-{{ section.id }} .contant-container{
    width: 100%;
  }
  .contant-container .contact_info .icons svg {
      width: 30px;
      height: 30px;
  }
  .container-{{ section.id }} .contant-container .contact_info {
    display: flex;
    align-items: anchor-center;
    gap: 25px;
    margin-bottom: 20px;
  }
  .container-{{ section.id }} .contant-container .contact_info .info {
    display: flex;
    flex-direction: column;
    gap: 5px;
  }
  .container-{{ section.id }} .contant-container .contact_info h4, .container-{{ section.id }} .contant-container .contact_info p {
    margin: 0px;
  }
  .container-{{ section.id }} .contant-container .contact_info h4{
    font-size: 19px;
  }
  .container-{{ section.id }} .contant-container .contact_info p {
     font-size: 17px;
  }
  .container-{{ section.id }} .contant-container a{
    color: #000;
    text-decoration: underline !important;
    text-underline-offset: 5px;
  }
  .container-{{ section.id }} .contant-container .list-social__item .icon {
      height: 3.2rem;
      width: 3.2rem;
  }
 .container-{{ section.id }} .contant-container .svg-wrapper {
      width: 30px;
      height: 30px;
  }
  .{{ section.id }} .title{
    font-weight: 100 !important;
    margin-bottom: 40px;
  }
  .contact__button .button:hover{
    background-color: #df201f;
  }

  {% if section.settings.show_right_contact_form == true %}
    .container-{{ section.id }} {
    flex-direction: row-reverse;
    }
  {% endif %}

@media screen and (max-width: 749px){
  .container-{{ section.id }}{
    display: block;
  }
    form#ContactForm {
      margin-bottom: 2rem;
  }
</style>
