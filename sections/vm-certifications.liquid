<div class="icon-box-section__wrapper">
  <div class="page-width">
    <div class="features_wrapper">
      <div class="features_inner">
        {% for block in section.blocks %}
          <div class="icon-box">
            <div class="icon-box__inner">
              <div class="icon-box__icon">
                <div class="hover-box__wrapper">
                  <img 
                    src="{{ block.settings.icon_image | img_url: 'master' }}" 
                    alt="{{ block.settings.icon_image.alt }}" 
                    class="m:w-full" 
                    width="100" 
                    height="100">
                </div>
              </div>
              <div class="icon-box__content">
                <h3 class="icon-box__heading">{{ block.settings.heading }}</h3>
                <div class="icon-box__content">{{ block.settings.content }}</div>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Certifications",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding",
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "default": 40,
      "min": 0,
      "max": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "default": 40,
      "min": 0,
      "max": 100
    }
  ],
  "blocks": [
    {
      "type": "icon_box",
      "name": "Icon Box",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Certifications"
    }
  ]
}
{% endschema %}

<style>
#shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}

#shopify-section-{{ section.id }} .features_inner { 
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 20px;
}
  
#shopify-section-{{ section.id }} .icon-box {
    text-align: center;    
    box-shadow: 2px 2px 8px #80a03c58;
    padding: 15px;
    border-radius: 5px;
    width: calc(20% - 20px);
}

#shopify-section-{{ section.id }} .icon-box__icon {
    margin: 0 auto;
}

#shopify-section-{{ section.id }} .icon-box__heading {
    font-size: 16px;
    line-height: 24px;
    font-weight: 600;
    border-top: 1px solid #ddd; 
    padding-top: 15px;
    margin: 15px 0 0; 
}

#shopify-section-{{ section.id }} .icon-box__content p {
    font-size: 12px;
    line-height: 18px;
    margin-bottom: 0; 
}

@media screen and (min-width: 749px) and (max-width: 1024px) {    
#shopify-section-{{ section.id }} .icon-box {
    width: calc(33.33% - 20px);
}
}

@media screen and (max-width: 749px) {
#shopify-section-{{ section.id }} .features_inner {
    display: flex;
    justify-items: center;
}
  
#shopify-section-{{ section.id }} .icon-box {
     min-width: 165px;
} 
}
</style>
