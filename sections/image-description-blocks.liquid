  <div class="container-{{ section.id }} page-width js-swiper-navigation swiper color-{{ section.settings.color_scheme }}">
    {% for block in section.blocks %}
        <div class="sub-container-{{ section.id }} swiper-wrapper">
          <div class="text-content swiper-slide">
              <h2>{{ block.settings.main-title }}</h2>
              <p>
                  {{ block.settings.coll-desc }}
              </p>
              {% if block.settings.btn-url != blank %}
                <a class="know-more-btn button" href="{{ block.settings.btn-url }}">{{ block.settings.btn-text }}</a>
              {% endif %}
              <div class="icons-container">
                  <div class="icon">
                      <img src="{{ block.settings.image | img_url:'master' }}" alt="block-img">
                      <p>{{ block.settings.title }}</p>
                  </div>
              </div>
          </div>
          <div class="image-content">
              <img src="{{ block.settings.main-img | img_url:'master' }}" alt="main-img">
          </div>
        </div>
    {% endfor %}
    <!-- Arrows -->
        <div class="js-swiper-navigation-button-next"></div>
        <div class="js-swiper-navigation-button-prev"></div>
    </div>
    <script>
    (function() {
    // INITIALIZATION OF SWIPER
    // =======================================================
        var navigation = new Swiper('.js-swiper-navigation', {
          navigation: {
            nextEl: '.js-swiper-navigation-button-next',
            prevEl: '.js-swiper-navigation-button-prev',
          },
        });
      })()
    </script>
    {% schema %}
    {
    "name": "Image with Discription",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "background-1"
      },
    ],
    "blocks": [
      {
        "name": "Block",
        "type": "Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "main-img",
            "label": "Main Image"
          },
          {
            "type": "text",
            "id": "main-title",
            "label": "Heading"
          },
          {
            "type": "richtext",
            "id": "coll-desc",
            "label": "Description"
          },
          {
            "type": "text",
            "id": "btn-text",
            "label": "Button Text"
          },
          {
            "type": "url",
            "id": "btn-url",
            "label": "Button Url"
          },
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image 1"
          },
          {
            "type": "text",
            "id":"title",
            "label":"Title 1"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Image with Discription"
      }
    ]
  }
{% endschema %}
    <style> 
        .sub-container-{{ section.id }} {
            display: flex;
            justify-content: space-between;
            padding: 50px;
            padding-left: 0px;
            padding-right: 0px;
            max-width: 90%;
            margin: auto;
        }

        .sub-container-{{ section.id }} .text-content {
            max-width: 50%;
        }

        .sub-container-{{ section.id }} .text-content h2 {
            font-size: 28px;
            color: #394634;
            font-weight: bold;
            margin-bottom: 20px;
        }

        .sub-container-{{ section.id }} .text-content p {
            font-size: 18px;
            color: #555;
            line-height: 1.6;
            text-transform: capitalize;
        }

        .sub-container-{{ section.id }} .icons-container {
            display: flex;
            gap: 50px;
            margin-top: 30px;
            align-items: center;
        }

        .sub-container-{{ section.id }} .icon {
            text-align: center;
            font-size: 16px;
            color: #333;
        }

        .sub-container-{{ section.id }} .icon img {
          width: auto;
          height: 60px;
        }

        .sub-container-{{ section.id }} .image-content {
            max-width: 45%;
        }

        .sub-container-{{ section.id }} .image-content img {
            width: 100%;
            border-radius: 50% 0 50% 50%;
            object-fit: cover;
        }

        @media (max-width: 900px) {
          
          .sub-container-{{ section.id }} .text-content h1 {
              font-size: 28px;
          }
           .sub-container-{{ section.id }} {
                flex-direction: column;
                padding: 0px;
            }

            .sub-container-{{ section.id }} .text-content, .image-content {
                max-width: 100%;
            }

            .sub-container-{{ section.id }} .image-content img {
                border-radius: 20px;
            }
           .sub-container-{{ section.id }} .image-content {
                max-width: 80%;
                margin: 20px auto;
            }
        }
      @media (max-width: 600px) {
      .spotlight-container .logos-container {
              grid-template-columns: repeat(1, 1fr) !important;
          }
      }
    </style>
