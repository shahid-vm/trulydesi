{{ 'collapsible-content.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.color_scheme }} gradient {{ section.id }} section-{{ section.id }}-padding">
  <p class="section-title">{{ section.settings.main-heading }}</p>
    <h1 class="heading">{{ section.settings.sub-heading }}</h1>
    <p class="description">
        {{ section.settings.main-description }}
    </p>

    <div class="grid-container">
      {% for block in section.blocks %}
      {% if block.settings.show_right_content == true %}
        <div class="grid-item image-box">
            <img src="{{ block.settings.image | img_url:'master' }}" alt="main_img">
        </div>
        <div class="grid-item text-box mission">
            <div class="icon">{% if block.settings.sub-image != blank %}<img src="{{ block.settings.sub-image | img_url:'master' }}" alt="sub_img">{% else %}‚õ∞Ô∏è{% endif %}</div>
            <h2 style="color: #1f5429;">{{ block.settings.title }}</h2>
            <p>
                {{ block.settings.content }}
            </p>
        </div>
        {% else %}
          <div class="grid-item image-box m-class">
              <img src="{{ block.settings.image | img_url:'master' }}" alt="main_img">
          </div>
          <div class="grid-item text-box vision">
              <div class="icon">{% if block.settings.sub-image != blank %}<img src="{{ block.settings.sub-image | img_url:'master' }}" alt="sub_img">{% else %}üçÉ{% endif %}</div>
              <h2 style="color: #fff;">{{ block.settings.title }}</h2>
              <p>
                  {{ block.settings.content }}
              </p>
          </div>
          <div class="grid-item image-box d-class">
              <img src="{{ block.settings.image | img_url:'master' }}" alt="main_img">
          </div>
        {% endif %}
      {% endfor %}
    </div>
</div>
{% schema %}
{
  "name": "Text With Image Custom",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "caption",
      "label": "t:sections.collapsible_content.settings.caption.label"
    },
        {
      "type": "inline_richtext",
      "id": "main-heading",
      "label": "Heading",
      "default": "Heading"
    },
    {
      "type": "inline_richtext",
      "id": "sub-heading",
      "label": "Sub Heading",
      "default": "Sub Heading"
    },
    {
      "type": "textarea",
      "id": "main-description",
      "label": "Main Description",
      "default": "description"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "t:sections.all.heading_size.options__1.label"
        },
        {
          "value": "h1",
          "label": "t:sections.all.heading_size.options__2.label"
        },
        {
          "value": "h0",
          "label": "t:sections.all.heading_size.options__3.label"
        },
        {
          "value": "hxl",
          "label": "t:sections.all.heading_size.options__4.label"
        },
        {
          "value": "hxxl",
          "label": "t:sections.all.heading_size.options__5.label"
        }
      ],
      "default": "h1",
      "label": "t:sections.all.heading_size.label"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Padding bottom",
      "default": 60
    },
  ],
  "blocks": [
    {
      "type": "column",
      "name": "Column",
      "settings": [
        {
          "type": "checkbox",
          "id": "show_right_content",
          "default": false,
          "label": "Show Second Content",
          "info": "Show Second Content"
        },
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "image_picker",
          "id": "sub-image",
          "label": "Sub Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Text With Image Custom"
    }
  ]
}
{% endschema %}
