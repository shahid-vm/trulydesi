<section class="a2milk-section">
    <h1 class="heading">{{ section.settings.title }} {{ page_title }}</h1>

    <div class="benefits-grid">
      {% for block in section.blocks %}
     {% if forloop.index == 1 %}
      <div class="benefit top-left">
        <img src="{{ block.settings.icon_image| img_url:'master' }}" alt="Block-image">
        <h3>{{ block.settings.heading }}</h3>
        <p>{{ block.settings.content }}</p>
      </div>
      {% endif %}
      {% if forloop.index == 2 %}
          <div class="benefit top-right">
            <img src="{{ block.settings.icon_image| img_url:'master' }}" alt="Block-image">
            <h3>{{ block.settings.heading }}</h3>
            <p>{{ block.settings.content }}</p>
          </div>
      {% endif %}

      {% if forloop.index == 3 %}
          <div class="benefit bottom-left">
            <img src="{{ block.settings.icon_image| img_url:'master' }}" alt="Block-image">
            <h3>{{ block.settings.heading }}</h3>
            <p>{{ block.settings.content }}</p>
          </div>
      {% endif %}

      {% if forloop.first %}
        <div class="center-image">
          <img src="{{ section.settings.main_image| img_url:'master' }}" alt="Main Image">
        </div>
      {% endif %}
        
       {% if forloop.index == 4 %}
          <div class="benefit bottom-right">
            <img src="{{ block.settings.icon_image| img_url:'master' }}" alt="Block-image">
            <h3>{{ block.settings.heading }}</h3>
            <p>{{ block.settings.content }}</p>
          </div>
      {% endif %}
    {% endfor %}
    </div>
</section>
{% schema %}
{
  "name": "location-content-block",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding",
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "image_picker",
      "id": "main_image",
      "label": "Main Image"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "default": 40,
      "min": 0,
      "max": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "default": 40,
      "min": 0,
      "max": 100
    }
  ],
  "blocks": [
    {
      "type": "icon_box",
      "name": "Icon Box",
      "limit": 4,
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Location Content Block"
    }
  ]
}
{% endschema %}

<style>
  .a2milk-section {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }
  
  .a2milk-section .heading {
    font-size: 28px;
    font-weight: bold;
    color: #2d4829;
    position: relative;
    text-align: center;
    width: 100%;
  }
  
  .a2milk-section .benefits-grid {
    display: grid;
    grid-template-areas:
      "top-left center top-right"
      "bottom-left center bottom-right";
    gap: 20px;
    align-items: center;
    justify-content: center;
    position: relative;
  }
  
  .a2milk-section .benefit {
    max-width: 400px;
    padding: 10px;
    justify-items: center;
  }
  
  .a2milk-section .benefit img {
    width: 50px;
    margin-bottom: 10px;
  }
  
  .a2milk-section .benefit h3 {
    font-size: 18px;
    margin: 10px 0;
    color: #2d2d2d;
    text-wrap: nowrap;
  }
  
  .a2milk-section .benefit p {
    font-size: 14px;
    color: #555;
    line-height: 1.5;
    text-align: center;
  }
  
  .a2milk-section .top-left { grid-area: top-left; }
  .a2milk-section .top-right { grid-area: top-right; }
  .a2milk-section .bottom-left { grid-area: bottom-left; }
  .a2milk-section .bottom-right { grid-area: bottom-right; }
  
  .a2milk-section .center-image {
    grid-area: center;
    position: relative;
    max-width: 300px;
    margin: auto;
  }
  
  .a2milk-section .center-image img {
    width: 100%;
  }
  @media screen and (max-width: 749px) {
   /* .a2milk-section .center-image {
     display:none;
   } */
    .a2milk-section .benefits-grid{
      column-gap: 0px !important;
      row-gap: 90px !important;
    }
     .benefits-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-areas:
      "top-left top-right"
      "bottom-left bottom-right"
      "center center";
    gap: 20px;
  }

  .center-image {
    grid-column: 1 / -1;
    justify-content: center;
  }

  .benefit {
    text-align: center;
  }

  }
</style>