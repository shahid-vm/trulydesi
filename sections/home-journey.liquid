{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<section class="food-journey section-{{ section.id }}-padding color-{{ section.settings.color_scheme }} gradient">
  <div class="{% unless section.settings.full_width %} page-width{% endunless %}">
    <h2 class="title">{{ section.settings.title }}</h2>
    
    <div class="journey-steps">
      {% for block in section.blocks %}
        <div class="step">
          <img src="{{ block.settings.step-image | img_url: 'master' }}" alt="{{ block.settings.step-image.alt }}">
          <p>{{ block.settings.step-title }}</p>
        </div>

        {% if forloop.index < forloop.length %}
          <div class="arrow">
            {% assign mod = forloop.index | modulo: 2 %}
            <img src="{% if mod == 0 %}{{ section.settings.arrow-2 | img_url: 'master' }}{% else %}{{ section.settings.arrow-1 | img_url: 'master' }}{% endif %}">
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    <div class="btn-wrapper">
      <a href="{{ section.settings.btn_url }}" class="know-more-btn">{{ section.settings.btn_text }}</a>
    </div>
  </div>
</section>


{% schema %}
  {
    "name": "Food Journey",
    "settings": [
      {
        "type": "image_picker",
        "id": "background-image",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "btn_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "btn_url",
        "label": "Button URL"
      },
      {
        "type": "header",
        "content": "Arrows"
      },
      {
        "type": "image_picker",
        "id": "arrow-1",
        "label": "Arrow 1"
      },
      {
        "type": "image_picker",
        "id": "arrow-2",
        "label": "Arrow 2"
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-1"
      },
      {
        "type": "checkbox",
        "id": "full_width",
        "default": true,
        "label": "t:sections.rich-text.settings.full_width.label"
      },
      {
        "type": "header",
        "content": "t:sections.all.padding.section_padding_heading"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 40
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 52
      }
    ],
    "blocks": [
      {
        "type": "text",
        "name": "Journey",
        "settings": [
          {
            "type": "image_picker",
            "id": "step-image",
            "label": "Image"
          },
          {
            "type": "text",
            "id": "step-title",
            "label": "Title"
          },
        ]
      }
    ],
    "presets": [{
      "name": "Food Journey"
    }]
  }
{% endschema %}

<style>
#shopify-section-{{ section.id }} section.food-journey {
    {% if section.settings.background-image != blank %}
      background-image: url({{ section.settings.background-image | img_url: 'master' }});
    {% endif %}
    background-position: center;
    background-size: cover;
    background-repeat: no-repeat;
    position: relative;
}

#shopify-section-{{ section.id }} section.food-journey:before {
    position: absolute;
    content: '';
    display: block;
    width: 100%;
    height: 100%;
    background: #15803d;
    z-index: -1;
    top: 0;
    left: 0;
    right: 0;
}

#shopify-section-{{ section.id }} section.food-journey h2.title {
    color: #fff;
    /* max-width: 450px; */
    margin: 0 auto 40px;
    text-align: center;
}
      
#shopify-section-{{ section.id }} .journey-steps {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

#shopify-section-{{ section.id }} .step {
    text-align: center;
    width: 33.33%;
}

#shopify-section-{{ section.id }} .step img {
    width: 150px;
    margin: 0 auto;
}

#shopify-section-{{ section.id }} .step p {
    font-size: 20px;
    line-height: 23px;
    /* font-weight: 600; */
    color: #fff;
    text-transform: capitalize;
    max-width: 200px;
    margin: 15px auto 1px;
}

#shopify-section-{{ section.id }} .btn-wrapper {
    text-align: center;
    margin: 40px auto 0;
}

#shopify-section-{{ section.id }} .btn-wrapper a {
    background: #ffcd00;
    padding: 15px 40px;
    border-radius: 200px;
    font-size: 16px;
    line-height: 24px;
    font-weight: 600;
    color: #000;
}
@media screen and (max-width: 789px) {
  .journey-steps .arrow {
      transform: rotate(45deg);
      margin: 40px 0;
      display: none;
  }
}
@media screen and (max-width: 789px) {
    .journey-steps{
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
    justify-content: center;
    }
    #shopify-section-{{ section.id }} .step {
      width: 45%;
      max-width: 50%;
    }
    #shopify-section-{{ section.id }} .step img {
      width: 100px;
  }
  
  #shopify-section-{{ section.id }} .step p {
      font-size: 14px;
      margin: 6px auto 1px;
  }
}
</style>