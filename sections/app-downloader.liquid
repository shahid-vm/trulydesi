<style>
.app-install-banner {
  display:none;
}
@media only screen and (max-width: 768px) {
  .app-install-banner {
    width: 100%;
    z-index: 1000;
    display:block;
  }

  .app-install-banner .banner-content {
    display: flex;
    align-items: center;
    padding: 10px;
    flex-wrap: wrap;
    gap: 10px;
    justify-content: space-between;
  }

  .app-install-banner .milk-icon {
    height: 40px;
  }

  .app-install-banner .text {
    flex: 1;
    line-height: 15px;
  }
   .app-install-banner .text .subTitle{
     font-size: 12px;
     margin: 0px;
   }
  .app-install-banner .text .app-title{
     font-size: 14px;
      margin: 0px;
   }

  .app-install-banner .install-btn {
    padding: 5px 10px;
    border: none;
    color: #fff;
    border-radius: 4px;
    text-decoration: none;
    font-size: 13px;
    margin: 0 2px;
    background-color: #064F32; /* default Android green */
  }

  .app-install-banner .close-btn {
    background: none;
    border: none;
    font-size: 20px;
    line-height: 20px;
    cursor: pointer;
  }
}

</style>
<body>
<div class="app-install-banner color-{{ section.settings.color_scheme }}" id="appBanner">
  <div class="banner-content">
    <button class="close-btn" onclick="document.getElementById('appBanner').style.display='none'">Ã—</button>
    <img src="{{ section.settings.image | img_url:'master' }}" alt="main-image" class="milk-icon" />
    <div class="text">
      <p class="subTitle">{{ section.settings.sub_title }}</p>
      <p class="app-title"><strong>{{ section.settings.title }}</strong></p>
    </div>
    <a href="#" id="installLink" class="install-btn">Install</a>
  </div>
</div>
<script>
 document.addEventListener("DOMContentLoaded", function () {
  const installLink = document.getElementById("installLink");
  const userAgent = window.navigator.userAgent || window.navigator.vendor || window.opera;

  if (/android/i.test(userAgent)) {
    installLink.href = "{{ section.settings.androidlink }}"; // Android link
    installLink.textContent = "INSTALL";
  } else if (/iPad|iPhone|iPod/.test(userAgent) && !window.MSStream) {
    installLink.href = "{{ section.settings.ioslink }}"; // iOS link
    installLink.textContent = "INSTALL";
  } else {
    // If OS can't be determined, hide the button or default to Android
    installLink.href = "https://provilac.com";
    installLink.textContent = "Visit Site";
  }

  // Optional: Hide on repeat visit
  document.querySelector('.close-btn').addEventListener('click', () => {
  document.getElementById('appBanner').style.display = 'none';
  });
});
</script>
