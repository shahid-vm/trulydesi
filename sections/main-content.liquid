{%- style -%}
  #mainBanner--{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }
{%- endstyle -%}

<section
  id="mainBanner--{{ section.id }}"
  class="section-padding color-{{ section.settings.color_scheme }}">
  <div class="content-{{ section.id }} {% if section.settings.content_width == 0 %}page-width{% endif %}">
    <div class="section-header">
      {% if section.settings.title != blank %}
        <h1 class="title inline-richtext">
          {{- section.settings.title | escape -}}
        </h1>
      {% endif %}
      {% if section.settings.content != blank %}
          <div class="rich-text__text rte scroll-trigger animate--slide-in">
            {{ section.settings.content }}
          </div>
     {% endif %}
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Main Content",
    "settings": [
      {
        "type": "header",
        "content": "Section spacing"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
      },
      {
        "type": "textarea",
        "id": "content",
        "label": "Content",
        "default":"Content"
      },
      {
        "type": "select",
        "id": "desktop_content_position",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left",
        "label": "Desktop Content Position"
      },
       {
        "type": "select",
        "id": "desktop_text_align",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left",
        "label": "Desktop Content Text Align"
      },
            {
        "type": "select",
        "id": "mobile_content_position",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left",
        "label": "Mobile Content Position"
      },
       {
        "type": "select",
        "id": "mobile_text_align",
        "options": [
          {
            "value": "left",
            "label": "Left"
          },
          {
            "value": "center",
            "label": "Center"
          },
          {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "left",
        "label": "Mobile Content Text Align"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding top",
        "default": 60
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "px",
        "label": "Padding bottom",
        "default": 60
      },
      {
        "type": "range",
        "id": "content_width",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "%",
        "label": "Desktop Content Width",
        "default": 50
      },
      {
        "type": "range",
        "id": "mobile_content_width",
        "min": 0,
        "max": 100,
        "step": 2,
        "unit": "%",
        "label": "Mobile Content Width",
        "default": 100
      },
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "scheme-1"
      },
    ],
    "presets": [
      {
        "name": "Main Content"
      }
    ]
  }
{% endschema %}

<style>
.content-{{section.id}}{
{% if section.settings.content_width != 0 %}
    width: {{ section.settings.content_width }}%;
{% endif %}
  padding: 0px 46px;
}
 #mainBanner--{{ section.id }}{
   text-align: {{ section.settings.desktop_text_align }};
   justify-items: {{ section.settings.desktop_content_position }};
 }
  @media screen and (max-width: 789px) {
    #mainBanner--{{ section.id }}{
     text-align: {{ section.settings.mobile_text_align }};
     justify-items: {{ section.settings.mobile_content_position }};
   }
    .content-{{section.id}}{
      width: {{ section.settings.mobile_content_width }}%;
      padding: 0px 16px;
    }
  }
</style>