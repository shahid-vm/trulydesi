<style>
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
    .founders-{{ section.id }} {
      text-align: center;
      padding: 60px 20px;
    }
    
    .founders-{{ section.id }} h2 {
      font-size: 32px;
      font-weight: bold;
      margin-bottom: 10px;
    }
    
    .founders-{{ section.id }} .founders-intro {
      max-width: 800px;
      margin: 0 auto 50px;
      font-size: 16px;
      line-height: 1.6;
      color: #555;
    }
    
  .founders-{{ section.id }} .swiper-wrapper {
      margin:0px auto;
    } 
    
    .founders-{{ section.id }} .founder-card {
      background-color: white;
      border-radius: 20px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
      padding: 30px 20px;
      max-width: 320px;
      text-align: center;
      transition: transform 0.3s;
    }
    
    .founders-{{ section.id }} .founder-card:hover {
      transform: translateY(-5px);
    }
    
    .founders-{{ section.id }} .founder-img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 20px;
    }
    
    .founders-{{ section.id }} .founder-card h3 {
      font-size: 20px;
      margin-bottom: 15px;
    }
    
    .founders-{{ section.id }} .founder-card p {
      font-size: 15px;
      color: #444;
      line-height: 1.6;
    }
      .testimonials-{{ section.id }} .swiper-pagination-bullet {
      background: white;
      opacity: 1;
    }
    
    .testimonials-{{ section.id }} .swiper-pagination-bullet-active {
      background: black;
    }
    .custom-nav {
      font-size: 0px;
      background-color: #579a72 !important;
      padding: 20px;
      color: #fff !important;
      border-radius: 50%;
    }
    .swiper-button-next:after, .swiper-button-prev:after {
      font-size: 20px !important;
    }
    @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
</style>
