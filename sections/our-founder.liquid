<div class="section-{{ section.id }}-padding founders-{{ section.id }} color-{{ section.settings.color_scheme }}">
  <h2>{{ section.settings.title }}</h2>
  <p class="founders-intro">
   {{ section.settings.discription }}
  </p>
    <div class="founder-container page-width">
      <div class="all-cards">
      {% for block in section.blocks %}
        <div class="founder-card">
          <img src="{{ block.settings.image | img_url:'master' }}" alt="Founder Image" class="founder-img" />
          <h3>{{ block.settings.title }}</h3>
          <p>{{ block.settings.content }}</p>
        </div>
      {% endfor %}
      </div>
    </div>
</div>

<script>
  var swiper = new Swiper(".mySwiper", {
    slidesPerView: 1,
    spaceBetween: 30,
    loop: false,
    pagination: {
      el: ".swiper-pagination",
      clickable: true,
    },
    navigation: {
      nextEl: ".swiper-button-next",
      prevEl: ".swiper-button-prev",
    },
    breakpoints: {
      768: {
        slidesPerView: 2,
      },
      1024: {
        slidesPerView: 3,
      }
    }
  });
</script>
{% schema %}
  {
      "name": "Our Founder",
      "settings": [
        {
          "type": "color_scheme",
          "id": "color_scheme",
          "label": "t:sections.all.colors.label",
          "default": "background-1"
        },
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "text",
        "id":"discription",
        "label":"Discription"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
      ],
      "blocks": [
        {
          "name": "Founder",
          "type": "Founder",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Founder Image"
            },
            {
              "type": "text",
              "id":"title",
              "label":"Customer Name"
            },
            {
              "type": "text",
              "id":"content",
              "label":"Discription"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Our Founder"
        }
      ]
    }
  {% endschema %}
<style>
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
    .founders-{{ section.id }} {
      text-align: center;
      padding: 60px 20px;
    }
    
    .founders-{{ section.id }} h2 {
          color: #064f32;
          font-size: 28px;
          font-weight: bold;
          text-align: center;
          margin: 0px;
    }
    
    .founders-{{ section.id }} .founders-intro {
      max-width: 800px;
      margin: 0 auto 50px;
      font-size: 16px;
      line-height: 1.6;
      color: #555;
    }
    
    .founders-{{ section.id }} .swiper-wrapper {
      padding: 10px 0px;
      display: flex;
      justify-content: center;
    } 
   .founders-{{ section.id }} .founder-container {
     padding-left: 0px;
   }
    .founders-{{ section.id }} .founder-container .all-cards {
      display: flex;
      gap: 32px;
      justify-content: center;
      margin: 0px auto;
      width: 100%;
      padding: 20px;
      padding-left: 10px;
    }
    
    .founders-{{ section.id }} .founder-card {
      background-color: white;
      border-radius: 20px;
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
      padding: 30px 20px;
      max-width: 50%;
      text-align: center;
      transition: transform 0.3s;
      margin: 0px auto;
      min-height: 400px;
    }
    
    .founders-{{ section.id }} .founder-card:hover {
      transform: translateY(-5px);
    }
    
    .founders-{{ section.id }} .founder-img {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      object-fit: cover;
      margin-bottom: 20px;
      border: 1px solid #e2e2e2
    }
    
    .founders-{{ section.id }} .founder-card h3 {
      font-size: 20px;
      margin-bottom: 15px;
    }
    
    .founders-{{ section.id }} .founder-card p {
      font-size: 15px;
      color: #444;
      line-height: 1.6;
    }
      .testimonials-{{ section.id }} .swiper-pagination-bullet {
      background: white;
      opacity: 1;
    }
    
    .testimonials-{{ section.id }} .swiper-pagination-bullet-active {
      background: black;
    }
    .custom-nav {
      font-size: 0px;
      background-color: #579a72 !important;
      padding: 20px;
      color: #fff !important;
      border-radius: 50%;
    }
    .swiper-button-next:after, .swiper-button-prev:after {
      font-size: 20px !important;
    }
  .swiper-slide{
    margin-right: 0px !important;
  }
    @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
    }
   @media screen and (max-width: 750px) {
     .founders-{{ section.id }} .founder-container .all-cards {
        flex-direction: column;
        padding: 0px !important;
      }
    
    .founders-{{ section.id }} .founder-card {
      max-width: 100%;
    }
   }
</style>
