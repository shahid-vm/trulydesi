<div class="icon-box-section__wrapper">
  <div class="page-width custom-width">
    <div class="features_wrapper">
      <div class="features_inner">
        {% for block in section.blocks %}
          <div class="icon-box">
            <div class="icon-box__inner">
              <div class="icon-box__icon" style="width: 120px;">
                <div class="hover-box__wrapper">
                  <img 
                    src="{{ block.settings.icon_image | img_url: 'master' }}" 
                    alt="{{ block.settings.icon_image.alt }}" 
                    class="m:w-full" 
                    width="120" 
                    height="120">
                </div>
              </div>
              <div class="icon-box__content">
                <h3 class="icon-box__heading">{{ block.settings.heading }}</h3>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Features",
  "settings": [
    {
      "type": "header",
      "content": "Section Padding",
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "default": 40,
      "min": 0,
      "max": 100
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "default": 40,
      "min": 0,
      "max": 100
    }
  ],
  "blocks": [
    {
      "type": "icon_box",
      "name": "Icon Box",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon_image",
          "label": "Icon Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Features"
    }
  ]
}
{% endschema %}

<style>
#shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
}

#shopify-section-{{ section.id }} .features_wrapper {
    background: #f3f5f2;
    border-radius: 10px;
    padding: 30px 15px;
}

#shopify-section-{{ section.id }} .features_inner { 
    display: grid;
    gap: 20px;
}
  
#shopify-section-{{ section.id }} .icon-box {
    text-align: center;
}

#shopify-section-{{ section.id }} .icon-box__icon {
    margin: 0 auto;
}

#shopify-section-{{ section.id }} .icon-box__heading {
    font-size: 16px;
    line-height: 24px;
    margin: 0;
}

@media screen and (min-width: 1024px) {
#shopify-section-{{ section.id }} .features_inner {
    grid-template-columns: repeat(6, minmax(0, 1fr));
}
}
  
@media screen and (max-width: 1023px) {
#shopify-section-{{ section.id }} .features_inner {
    grid-template-columns: repeat(2, minmax(0, 1fr));
}
}
  
@media screen and (max-width: 749px) {
#shopify-section-{{ section.id }} .icon-box__icon {
    width: 80px;
}

#shopify-section-{{ section.id }} .icon-box__icon img {
    width: 80px;
    height: 80px;
}
}
</style>
