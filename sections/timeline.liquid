<style>
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
   .timeline-{{ section.id }} {
    background-color: #f9f9f9;
    padding: 60px 20px;
    position: relative;
  }
  
  .timeline-{{ section.id }} .timeline-title {
    text-align: center;
    font-size: 2.5rem;
    margin-bottom: 40px;
    color: #333;
  }
  
  .timeline-{{ section.id }} .timeline-container {
    position: relative;
    max-width: 800px;
    margin: 0 auto;
    padding-left: 20px;
    border-left: 4px solid #5c3441;
  }
  
  .timeline-{{ section.id }} .timeline-item {
    position: relative;
    margin-bottom: 40px;
    opacity: 0;
    transform: translateY(50px);
    transition: all 0.6s ease-out;
  }
  
  .timeline-{{ section.id }} .timeline-item::before {
    content: '';
    position: absolute;
    left: -12px;
    top: 0;
    width: 24px;
    height: 24px;
    background-color: #5c3441;
    border-radius: 50%;
    border: 4px solid #fff;
    box-shadow: 0 0 0 4px #5c3441;
  }
  
  .timeline-{{ section.id }} .timeline-item.visible {
    opacity: 1;
    transform: translateY(0);
  }
  
  .timeline-{{ section.id }} .timeline-content h3 {
    margin: 0 0 10px;
    color: #5c3441;
    font-size: 1.5rem;
  }
  
  .timeline-{{ section.id }} .timeline-content p {
    margin: 0;
    color: #555;
    font-size: 1rem;
  }
  
  /* Responsive Design */
  @media (max-width: 600px) {
    .timeline-{{ section.id }} .timeline-container {
      padding-left: 10px;
    }
  
    .timeline-{{ section.id }} .timeline-item::before {
      left: -10px;
      width: 20px;
      height: 20px;
    }
  
    .timeline-{{ section.id }} .timeline-content h3 {
      font-size: 1.25rem;
    }
  
    .timeline-{{ section.id }} .timeline-content p {
      font-size: 0.95rem;
    }
  }
@media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
  }
</style>