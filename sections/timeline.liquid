<style>
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
   .section-title {
      text-align: center;
      font-size: 2.8rem;
      font-weight: 700;
      margin-bottom: 60px;
    }
    
    .timeline {
      position: relative;
      max-width: 900px;
      margin: auto;
      padding: 40px 0;
    }
    
    .timeline-item {
      position: relative;
      padding-left: 50%;
      margin-bottom: 100px;
    }
    
    .timeline-item .timeline-content {
      position: relative;
      width: 45%;
      background: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0,0,0,0.05);
    }
    
    .timeline-content.left {
      left: -100%;
      text-align: right;
    }
    
    .timeline-content.right {
      left: 5%;
      text-align: left;
    }
    
    .timeline-line {
      position: absolute;
      left: 50%;
      top: 0;
      transform: translateX(-50%);
      width: 8px;
      height: 0;
      background-color: #ff4f12;
      border-radius: 50px;
      transition: height 1s ease-out;
    }
    
    .timeline-item::after {
      content: '';
      position: absolute;
      top: 0;
      left: 50%;
      width: 18px;
      height: 18px;
      background: #ff4f12;
      border-radius: 50%;
      transform: translateX(-50%);
      z-index: 2;
    }
    
    .timeline-item.visible .timeline-line {
      height: 100px;
    }
    
    @media (max-width: 768px) {
      .timeline-item {
        padding-left: 40px;
      }
      .timeline-line {
        left: 20px;
      }
      .timeline-content.left,
      .timeline-content.right {
        width: calc(100% - 60px);
        left: 0;
        text-align: left;
      }
    }
@media screen and (min-width: 750px) {
