<style>
  .{{ section.id }} .marquee-container {
      background-color: #f9f7eb; /* Light cream background */
      padding: 10px 0;
      overflow: hidden;
      white-space: nowrap;
      position: relative;
      width: 100%;
  }

  .{{ section.id }} .marquee-content {
      display: inline-block;
      white-space: nowrap;
      font-family: "Georgia", serif;
      font-style: italic;
      font-size: 24px;
      color: #5a7425; /* Green text */
      animation: marquee 15s linear infinite;
  }

  .{{ section.id }} .marquee-content span {
      margin: 0 15px;
  }

  .{{ section.id }} .asterisk {
      color: #f4d35e; /* Yellow asterisk */
      font-size: 26px;
  }

  /* Scrolling animation */
  @keyframes marquee {
      from {
          transform: translateX(100%);
      }
      to {
          transform: translateX(-100%);
      }
  }
</style>
  <div class="marquee-container {{ section.id }}">
    <div class="marquee-content">
      {% for block in section.blocks %}
              <span>{{ block.settings.title }}</span>
              <span class="asterisk">✻</span>
      {% endfor %}
      {% for block in section.blocks %}
              <span>{{ block.settings.title }}</span>
              <span class="asterisk">✻</span>
      {% endfor %}
      {% for block in section.blocks %}
              <span>{{ block.settings.title }}</span>
              <span class="asterisk">✻</span>
      {% endfor %}
    </div>
</div>
{% schema %}
{
  "name": "Scrolling Usp",
  "class": "section",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
  ],
  "blocks": [
    {
      "type": "usp",
      "name": "USP",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "default": "Title",
          "label": "Title"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Scrolling Usp"
    }
  ]
}
{% endschema %}