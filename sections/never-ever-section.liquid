<div class="section-{{ section.id }}-padding never-have-i-ever {{ section.id }} color-{{ section.settings.color_scheme }}">
  <div class="cloud-left-bg">
    <img src="https://cdn.shopify.com/s/files/1/0579/7557/0520/files/cartoon-sky-cloud-vector-hand-dr.png?v=1747025752" alt="cloud-img">
  </div>
  <div class="cloud-right-bg">
    <img src="https://cdn.shopify.com/s/files/1/0579/7557/0520/files/cartoon-sky-cloud-vector-hand-dr.png?v=1747025752" alt="cloud-img">
  </div>
  <div class="never-ever-sec">
  <div class="title-bubble">
    <h2>{{ section.settings.title }}</h2>
  </div>


  <div class="item-list-container">
  <p class="subtitle">{{ section.settings.sub-title }}</p>
  <div class="item-list">
    <ul>
    {% for block in section.blocks %}
      {% assign mod = forloop.index | modulo: 2 %}
      {% if  mod != 0 %}
      <li>❌ {{ block.settings.title }}</li>
      {% endif %}
    {% endfor %}
    </ul>
    <ul>
    {% for block in section.blocks %}
      {% assign mod = forloop.index | modulo: 2 %}
        {% if  mod == 0 %}
        <li>❌ {{ block.settings.title }}</li>
        {% endif %}
    {% endfor %}
    </ul>
  </div>
  </div>

  <div class="bottom-box">
    <div class="text">
      <p>{{ section.settings.discription }}</p>
    </div>
    {% if section.settings.button-link!= blank and section.settings.button-text != blank %}
    <div class="btn-wrap">
      <a href="{{ section.settings.button-link }}" class="our-story-btn">{{ section.settings.button-text }}</a>
    </div>
    {% endif %}
    <img class="character" src="{{ section.settings.image | img_url:'master' }}" alt="character" />
  </div>
  </div>
</div>
    {% schema %}
{
    "name": "Never Ever Section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "background-1"
      }, 
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "sub-title",
        "label": "Sub Title"
      },
      {
        "type": "textarea",
        "id": "discription",
        "label": "Discription"
      },
      {
        "type": "text",
        "id": "button-text",
        "label": "Button Label",
        "default":"Know More"
      },
      {
        "type": "url",
        "id": "button-link",
        "label": "Button Url"
      },
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "range",
        "id": "padding_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_top",
        "default": 36
      },
      {
        "type": "range",
        "id": "padding_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "unit": "px",
        "label": "t:sections.all.padding.padding_bottom",
        "default": 36
      }
    ],
    "blocks": [
      {
        "name": "Block",
        "type": "Block",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Never Ever Section"

      }
    ]
  }
{% endschema %}
  <style>
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px !important;
        padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px !important;
      }
     .never-have-i-ever {
        text-align: center;
        padding: 0px 20px;
        position: relative;
        justify-self: anchor-center;
        width: 100%;
      }
      .{{ section.id }} .title-bubble {
        padding: 15px 40px;
        color: #fff;
        font-size: 28px;
        font-weight: bold;
        margin-bottom: 20px;
        background-image: url(https://cdn.shopify.com/s/files/1/0579/7557/0520/files/Asset_1_4ef05538-4b6f-4318-9d0d-a0ee15b388d1.svg?v=1745556091);
        background-repeat: no-repeat;
        display: flex;
        height: 104px;
        width: 100%;
        background-position-x: center;
        justify-content: center;
      }
      .{{ section.id }} .title-bubble h2{
        margin: 0px;
        font-size: 28px;
        color: #fff;
      }
      
      .{{ section.id }} .subtitle {
        font-weight: bold;
        font-size: 16px;
      }
      
      .{{ section.id }} .item-list {
        display: flex;
        justify-content: center;
        gap: 40px;
        flex-wrap: wrap;
        margin-bottom: 60px;
        text-align: left;
      }
      
      .{{ section.id }} .item-list ul {
        list-style: none;
        padding: 0;
      }
      
      .{{ section.id }} .item-list li {
        font-weight: bold;
        font-size: 16px;
        margin: 8px 0;
        color: #000;
      }
      
      .{{ section.id }} .bottom-box {
        background-color: #CCE142;
        border: 1px solid #174117;
        border-radius: 12px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px;
        max-width: 700px;
        margin: 0 auto;
        position: relative;
        z-index: 1;
        flex-wrap: wrap;
        gap: 20px;
        place-content: center;
      }
      
      .{{ section.id }} .bottom-box .text {
        font-weight: bold;
        font-size: 16px;
        text-align: left;
        color: #000;
      }
      
      .{{ section.id }} .our-story-btn {
        background-color: #fff;
        padding: 12px 30px;
        border-radius: 12px;
        font-weight: bold;
        color: #000;
        border: none;
        text-decoration: none;
        box-shadow: 5px 5px 0 #174117;
      }
      
      .{{ section.id }} .character {
        position: absolute;
        width: 68px;
        z-index: 0;
        left: 100% !important;
        top: 0%;
        transform: translate(-100%, -100%) !important;
      }

      @media screen and (min-width: 750px) {
      .section-{{ section.id }}-padding {
        padding-top: {{ section.settings.padding_top }}px !important;
        padding-bottom: {{ section.settings.padding_bottom }}px !important;
      }
      }
        @media screen and (max-width: 750px) {
            .{{ section.id }} .item-list {
              justify-content: left;
              gap: 0px;
            }
          .{{ section.id }} .item-list ul{
            margin-top: 0px;
            margin-bottom: 0;
          }
          .{{ section.id }} .item-list ul li{
              margin-top: 0px;
          }
        }

.cloud-left-bg img, .cloud-right-bg img {
    width: 100%;
    max-width: 150px;
}
.cloud-left-bg{
  margin: 0px;
  text-align: left;
}
.cloud-right-bg{
  text-align: right;
}

.cloud-left-bg,
.cloud-right-bg {
  position: absolute;
  top: 0;
  z-index: 0;
}

.cloud-left-bg {
  left: 0;
}

.cloud-right-bg {
  right: 0;
}


</style>

