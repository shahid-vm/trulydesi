    <div class="spotlight-container color-{{ section.settings.color_scheme }}">
        <h2 class="spotlight-title">{{ section.settings.title}}</h2>
        <div class="logos-container page-width">
          {% for block in section.blocks %}
            <img class="logo" src="{{ block.settings.image | img_url:'master' }}" alt="Brand Logo">
          {% endfor %}
        </div>
    </div>

    {% schema %}
{
    "name": "Brand Section",
    "settings": [
      {
        "type": "color_scheme",
        "id": "color_scheme",
        "label": "t:sections.all.colors.label",
        "default": "background-1"
      }, 
      {
        "type": "text",
        "id": "title",
        "label": "Heading"
      },
      {
        "type": "richtext",
        "id": "coll-desc",
        "label": "Description"
      },
    ],
    "blocks": [
      {
        "name": "Block",
        "type": "Block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Brand Section"

      }
    ]
  }
{% endschema %}
<style> 
        .spotlight-container {
            padding: 50px 20px;
            text-align: center;
        }
    
        .spotlight-container .spotlight-title {
            font-size: 28px;
            font-weight: bold;
            color: #2D4829;
            position: relative;
            display: inline-block;
        }
    
        .spotlight-container .logos-container {
            background-color: white;
            border-radius: 20px;
            padding: 50px;
            display: grid;
           grid-template-columns: auto auto auto auto auto;
            gap: 20px;
            margin: 30px auto;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        }
    
        .spotlight-container .logo {
            max-width: 150px;
            margin: auto;
        }
    
        @media (max-width: 600px) {
            .spotlight-container .logos-container {
                grid-template-columns: repeat(2, 1fr);
            }
        }
        @media (max-width: 1089px) and (min-width: 600px) {
            .spotlight-container .logos-container {
                grid-template-columns: repeat(3, 1fr);
            }
        }
    </style>

