<style>
    body {
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f8f8f8;
    }
    .search-container {
        position: relative;
        width: 300px;
    }
    .search-box {
        width: 100%;
        padding: 10px 40px 10px 30px;
        border: 1px solid #ccc;
        border-radius: 20px;
        font-size: 16px;
        outline: none;
    }
    .search-icon, .clear-icon {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        cursor: pointer;
    }
    .search-icon {
        left: 10px;
    }
    .clear-icon {
        right: 10px;
        display: none;
    }
    .search-results {
        margin-top: 10px;
        background: white;
        padding: 10px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        display: none;
    }
</style> 
<div class="search-container">
    <form action="{{ routes.search_url }}" method="get">
      <input id="search" type="text" name="q" placeholder="Search...">
      <button class="search__button" aria-label="{{ 'general.search.search' | t }}">
          <span class="svg-wrapper">
            {{- 'icon-search.svg' | inline_asset_content -}}
          </span>
          <span class="clear-icon" onclick="clearSearch()">❌</span>
        </button>
    </form>
    <div class="search-results" id="search-results">Search for <strong id="query"></strong> →</div>
  </div>
 <script>
    const searchInput = document.getElementById("search");
    const clearIcon = document.querySelector(".clear-icon");
    const searchResults = document.getElementById("search-results");
    const queryText = document.getElementById("query");

    searchInput.addEventListener("input", function() {
        if (this.value.length > 0) {
            clearIcon.style.display = "inline";
            queryText.textContent = this.value;
            searchResults.style.display = "block";
        } else {
            clearIcon.style.display = "none";
            searchResults.style.display = "none";
        }
    });

    function clearSearch() {
        searchInput.value = "";
        clearIcon.style.display = "none";
        searchResults.style.display = "none";
    }
</script>